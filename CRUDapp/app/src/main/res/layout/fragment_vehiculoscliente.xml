<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompartirFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtIdCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID Cliente"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtIdVechiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID Vehiculo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtmatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Matricula"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvmensajes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <EditText
            android:id="@+id/edtKilometros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kilometros"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textSize="10sp"
                app:icon="@drawable/save_data" />

            <Button
                android:id="@+id/button2"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:textSize="10sp"
                app:icon="@drawable/update_data" />

            <Button
                android:id="@+id/button3"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Borrar"
                android:textSize="10sp"
                app:icon="@drawable/trash_data" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>